#!/bin/bash
set -e

echo "Running pre-commit checks..."

# Format check
echo "Checking formatting..."
cargo fmt --check || {
    echo ""
    echo "Formatting issues found. Run 'cargo fmt' to fix."
    exit 1
}

# Clippy lints
echo "Running clippy..."
cargo clippy --all-targets --all-features -- -D warnings || {
    echo ""
    echo "Clippy warnings found. Fix the issues above."
    exit 1
}

# Cargo deny (license, security advisories, dependency bans)
echo "Running cargo deny..."
if command -v cargo-deny &> /dev/null; then
    cargo deny check || {
        echo ""
        echo "Cargo deny check failed. Fix the issues above."
        exit 1
    }
else
    echo "  cargo-deny not installed, skipping. Install with: cargo install cargo-deny"
fi

# Unit tests (library tests only for speed)
echo "Running tests..."
cargo test --lib || {
    echo ""
    echo "Tests failed. Fix the failing tests before committing."
    exit 1
}

echo ""
echo "All pre-commit checks passed!"
